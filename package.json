{
  "name": "automation-exercise-cypress-tests",
  "version": "1.0.0",
  "description": "Projeto de automação de testes para Automation Exercise usando Cypress",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:open:local": "cypress open --config-file cypress.config.local.js",
    "cypress:run": "cypress run",
    "cypress:run:local": "cypress run --config-file cypress.config.local.js",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "cypress:run:chrome:local": "cypress run --browser chrome --config-file cypress.config.local.js",
    "test": "cypress run",
    "test:local": "cypress run --config-file cypress.config.local.js",
    "test:headed": "cypress run --headed",
    "test:headed:local": "cypress run --headed --config-file cypress.config.local.js",
    "test:chrome": "cypress run --browser chrome --headed",
    "test:chrome:local": "cypress run --browser chrome --headed --config-file cypress.config.local.js",
    "test:all": "npm run test && npm run report:generate",
    "test:all:local": "npm run test:local && npm run report:generate",
    "test:ordered": "bash scripts/run-tests-ordered.sh",
    "test:specific": "cypress run --spec",
    "test:debug": "DEBUG=cypress:* cypress open",
    "test:debug:local": "DEBUG=cypress:* cypress open --config-file cypress.config.local.js",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "report:generate": "node scripts/generate-report.js",
    "report:consolidated": "npm run report:merge && npm run report:generate",
    "clean": "rm -rf node_modules cypress/reports cypress/videos cypress/screenshots",
    "install:clean": "npm run clean && npm install",
    "prepare:delivery": "bash scripts/prepare-delivery.sh",
    "verify": "cypress verify",
    "version": "cypress version"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Daniel Arc",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "@faker-js/faker": "^8.4.1"
  }
}
